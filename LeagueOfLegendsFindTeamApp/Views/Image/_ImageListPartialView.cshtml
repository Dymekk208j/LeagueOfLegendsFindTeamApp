@model List<LeagueOfLegendsFindTeamApp.Models.DatabaseModels.Image>

<div class="card-header">
    <strong>Images list</strong>
</div>
<div class="card-body">
    <div class="row d-flex">
        <div class="col">
            <button type="button" class="btn btn-sm btn-secondary float-left" name="BtnReturn" id="BtnReturn" onclick="GoToCategorySelectPanel()"><i class="zmdi zmdi-long-arrow-return mr-2"></i>Return</button>
        </div>
    </div>

    <div class="row d-flex align-items-start justify-content-start">
        <div class="row m-0 p-0">
            @{
                if (Model != null && Model.Count > 0)
                {
                    foreach (var img in Model)
                    {
                        <a href="#" onclick="GoToModificationPanel(@Html.Raw(img.ImageId))">
                            <div class="card m-4 iconCard">
                                <div class="card-header p-0 m-0 text-center">@Html.Raw(img.Title)</div>
                                <div class="card-body d-flex align-items-center justify-content-center">
                                    <img src="@Html.Raw(img.Url)" class="image" alt="Image" width="100" height="100" />
                                </div>
                            </div>
                        </a>
                    }
                }
                else
                {
                        <h1 class="mt-5 ml-2 mb-5">In this category there are any images</h1>
                }
            }
        </div>
    </div>
</div>
