@using LeagueOfLegendsFindTeamApp.Models.DatabaseModels
<div class="card-header">
    <strong>Images categories</strong>
</div>
<div class="card-body">
    <button type="button" class="btn btn-sm btn-success float-right" id="BtnUpdate" name="BtnUpdate" onclick="GoToCreatePanel()"><i class="zmdi zmdi-upload mr-2"></i>Upload new image</button>

    <div class="row d-flex align-items-center justify-content-center">

        <a href="#" onclick="GetImageListPartialView(@Html.Raw((int) ImageType.ChampionIcon))">
            <div class="card m-4 iconCard">
                <div class="card-header p-0 m-0 text-center">Champions icons</div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <img src="~/Content/images/icon/ImagesCategoryLogos/ChampionIconsCategoryLogo.png" class="image" alt="Image"/>
                </div>
            </div>
        </a>

        <a href="#" onclick="GetImageListPartialView(@Html.Raw((int) ImageType.ChampionPortrait))">
            <div class="card m-4 iconCard">
                <div class="card-header p-0 m-0 text-center">Champion portraits</div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <img src="~/Content/images/icon/ImagesCategoryLogos/ChampionPortraitsCategoryLogo.png" class="image" alt="Image"/>
                </div>
            </div>
        </a>

        <a href="#" onclick="GetImageListPartialView(@Html.Raw((int) ImageType.DivisionIcon))">
            <div class="card m-4 iconCard">
                <div class="card-header p-0 m-0 text-center">Divisions icons</div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <img src="~/Content/images/icon/ImagesCategoryLogos/DivisionIconCategoryLogo.png" class="image" alt="Image"/>
                </div>
            </div>
        </a>

        <a href="#" onclick="GetImageListPartialView(@Html.Raw((int) ImageType.PlayerIcon))">
            <div class="card m-4 iconCard">
                <div class="card-header p-0 m-0 text-center">Player icons</div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <img src="~/Content/images/icon/ImagesCategoryLogos/PlayerIconsCategoryLogo.png" class="image" alt="Image"/>
                </div>
            </div>
        </a>

        <a href="#" onclick="GetImageListPartialView(@Html.Raw((int) ImageType.TeamLogo))">
            <div class="card m-4 iconCard">
                <div class="card-header p-0 m-0 text-center">Team logos</div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <img src="~/Content/images/icon/ImagesCategoryLogos/TeamLogosCategoryLogo.png" class="image" alt="Image"/>
                </div>
            </div>
        </a>

        <a href="#" onclick="GetImageListPartialView(@Html.Raw((int) ImageType.Other))">
            <div class="card m-4 iconCard">
                <div class="card-header p-0 m-0 text-center">Others</div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <img src="~/Content/images/icon/ImagesCategoryLogos/OtherImagesCategoryLogo.png" class="image" alt="Image"/>
                </div>
            </div>
        </a>
    </div>
</div>

