@model List<LeagueOfLegendsFindTeamApp.Models.DatabaseModels.Language>

<div class="card-header">
    <strong>Languages list</strong>
    <button type="button" class="btn btn-sm btn-success float-right" id="BtnCreateNew" name="BtnCreateNew" onclick="GoToCreateForm()"><i class="zmdi zmdi-file-plus mr-2"></i>Create new language</button>

</div>
<div class="card-body">
    <table id="LanguageTable" class="table table-sm table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th style="width: 10%">Id</th>
            <th>Language</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var language in Model)
        {
            <tr onclick="GoToModificationForm(@Html.Raw(language.LanguageId))">
                <td class="pl-2">@Html.Name(language.LanguageId.ToString() + ". ")</td>
                <td class="pl-2">@Html.Name(language.Name)</td>
            </tr>

        }
    </table>
</div>

