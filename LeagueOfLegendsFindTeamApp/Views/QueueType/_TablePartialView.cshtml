@model List<LeagueOfLegendsFindTeamApp.Models.DatabaseModels.QueueType>

<div class="card-header">
    <strong>Queue types list</strong>
    <button type="button" class="btn btn-sm btn-success float-right" id="BtnCreateNew" name="BtnCreateNew" onclick="GoToCreateForm()"><i class="zmdi zmdi-file-plus mr-2"></i>Create new queue type</button>

</div>
<div class="card-body">
    <table id="QueueTypeTable" class="table table-sm table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th style="width: 10%">Id</th>
                <th>Queue type</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var queueType in Model)
            {
                <tr onclick="GoToModificationForm(@Html.Raw(queueType.QueueTypeId))">
                    <td class="pl-2">@Html.Name(queueType.QueueTypeId.ToString() + ". ")</td>
                    <td class="pl-2">@Html.Name(queueType.Name)</td>
                </tr>

            }
    </table>
</div>

