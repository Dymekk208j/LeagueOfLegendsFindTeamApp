@model List<LeagueOfLegendsFindTeamApp.Models.DatabaseModels.Region>

<div class="card-header">
    <strong>Regions list</strong>
    <button type="button" class="btn btn-sm btn-success float-right" id="BtnCreateNew" name="BtnCreateNew" onclick="GoToCreateForm()"><i class="zmdi zmdi-file-plus mr-2"></i>Create new region</button>

</div>
<div class="card-body">
    <table id="RegionsTable" class="table table-sm table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th style="width: 10%">Id</th>
                <th>Region</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var region in Model)
            {
                <tr onclick="GoToModificationForm(@Html.Raw(region.RegionId))">
                    <td class="pl-2">@Html.Name(region.RegionId.ToString() + ". ")</td>
                    <td class="pl-2">@Html.Name(region.Name)</td>
                </tr>

            }
    </table>
</div>

