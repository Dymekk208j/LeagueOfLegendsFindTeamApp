@model List<LeagueOfLegendsFindTeamApp.Models.DatabaseModels.TeamType>

<div class="card-header">
    <strong>Team types list</strong>
    <button type="button" class="btn btn-sm btn-success float-right" id="BtnCreateNew" name="BtnCreateNew" onclick="GoToCreateForm()"><i class="zmdi zmdi-file-plus mr-2"></i>Create new team type</button>

</div>
<div class="card-body">
    <table id="TeamTypeTable" class="table table-sm table-bordered table-hover table-striped">
        <thead>
        <tr>
            <th style="width: 10%">Id</th>
            <th>Team type</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var teamType in Model)
        {
            <tr onclick="GoToModificationForm(@Html.Raw(teamType.TeamTypeId))">
                <td class="pl-2">@Html.Name(teamType.TeamTypeId.ToString() + ". ")</td>
                <td class="pl-2">@Html.Name(teamType.Name)</td>
            </tr>

        }
    </table>
</div>

