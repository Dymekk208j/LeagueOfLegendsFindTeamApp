@model List<LeagueOfLegendsFindTeamApp.Models.DatabaseModels.Image>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Select logo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @{
                    if (Model != null && Model.Count > 0)
                    {
                        foreach (var img in Model)
                        {
                            <a href="#" onclick="SelectNewLogo(@Html.Raw(img.ImageId), @Html.Raw("'" + img.Url +"'"))" data-dismiss="modal">
                                <div class="card iconCard">
                                    <div class="card-header p-0 m-0 text-center">@Html.Raw(img.Title)</div>
                                    <div class="card-body d-flex align-items-center justify-content-center">
                                        <img src="@Html.Raw(img.Url)" class="image" alt="Image" width="100" height="100" />
                                    </div>
                                </div>
                            </a>
                        }
                    }
                    else
                    {
                        <h1 class="mt-5 ml-2 mb-5">In this category there are any images</h1>
                    }
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

